@model LanguageSchool.Data.Enrollment

@{
    ViewData["Title"] = "Delete";
}

<h1>Изтриване</h1>

<h3>Сигурни ли сте, че искате да изтриете това?</h3>
<div>
    <h4>Записани курсове</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.Students)*@
            Ученик
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Students.Id)
        </dd>
        <dt class = "col-sm-2">
           @* @Html.DisplayNameFor(model => model.SchoolYears)*@
           Учебна година
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SchoolYears.Id)
        </dd>
        <dt class = "col-sm-2">
         @*   @Html.DisplayNameFor(model => model.Result)*@
         Резултат
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Result)
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.SertificatId)*@
            Номер на сертификат
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SertificatId)
        </dd>
        <dt class = "col-sm-2">
           @* @Html.DisplayNameFor(model => model.RegData)*@
           Дата на регистрация
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegData)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Изтриване" class="btn btn-danger" /> 
        <a asp-action="Index">Назад</a>
    </form>
</div>
