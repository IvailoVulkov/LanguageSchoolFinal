@model IEnumerable<LanguageSchool.Data.Course>

@{
    ViewData["Title"] = "Курсове";
}
<div class="background">
<h1>Курсове</h1>

<p>
    <a asp-action="Create" class="material-symbols-outlined">library_add</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Name)*@
                Име
            </th>
            <th>
      @*          @Html.DisplayNameFor(model => model.Language)*@
                Език
            </th>
            <th>
               @* @Html.DisplayNameFor(model => model.AgeTypes)*@
                Възрастова група
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Categories)*@
                Категории
            </th>
            <th>
               @* @Html.DisplayNameFor(model => model.Description)*@
               Описание
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.ImageUrl)*@
