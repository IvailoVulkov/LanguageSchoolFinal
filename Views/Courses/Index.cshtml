            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.RegData)*@
                Дата на регистрация
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Language)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AgeTypes.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categories.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
                <td>
                    <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" width="100">
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegData)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="material-symbols-outlined">Edit</a>

                    <a asp-action="Details" asp-route-id="@item.Id"class="material-symbols-outlined">Info</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="material-symbols-outlined">Delete</a>
                    
            </td>
        </tr>
}
    </tbody>
</table>
</div>